<h1>Profile</h1>
<%= link_to "Back to Home Page", root_path %>
<br>
<br>
<h2>My e-mail: <%= @user.email %></h2>
<br>
<h2>My Created Events:</h2>
<ul>
  <% @created_events.each do |event| %>
    <li>
      <h3><%= link_to event.title, event_path(event) %></h3>
    </li>
    <p><%= event.description %></p>
    <p>Date: <%= event.date %></p>
    <p>Location: <%= event.location %></p>
  <% end %>
</ul>
<h2>My Attended Events:</h2>
<ul>
  <% @user.attended_events.each do |event| %>
    <li><%= link_to event.title, event_path(event) %></li>
  <% end %>
</ul>
